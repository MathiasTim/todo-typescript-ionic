{
  "compilerOptions": {
    "target": "ES5",
    "allowNonTsExtensions": true,
    "module": "system",
    "sourceMap": true,
    "noEmitOnError": false,
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "app/.tmp/",
    "out": "app.js"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "typings/",
    "hooks",
    "platforms",
    "plugins",
    "www",
    "gulp",
    "app/bower_components"
  ]
}
